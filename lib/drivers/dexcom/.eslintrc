{
  "extends": "airbnb",
  "plugins": ["lodash"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "max-len": "warn",
    "consistent-return": "warn",
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": true
    }],
    "arrow-parens": "warn",
    "linebreak-style": 0,
    "operator-linebreak": "warn",
    "import/extensions": "off"
  },
  "settings": {
    "lodash": 3
  }
}
